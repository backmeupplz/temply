{
  "name": "temply",
  "version": "1.0.0",
  "description": "Template bot for Telegram",
  "main": "dist/app.js",
  "repository": "https://github.com/backmeupplz/temply",
  "author": "backmeupplz <backmeupplz@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "distribute": "yarn build-ts && node dist/app.js",
    "develop": "concurrently -i -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold\" \"yarn watch-ts\" \"yarn watch-js\"",
    "build-ts": "tsc --skipLibCheck",
    "watch-ts": "tsc -w --skipLibCheck",
    "watch-js": "nodemon dist/app.js",
    "upload-translations": "node scripts/upload.js",
    "download-translations": "node scripts/download.js"
  },
  "dependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/js-yaml": "^3.12.1",
    "@types/node": "^12.7.5",
    "@types/uuid": "^8.3.0",
    "concurrently": "^4.1.2",
    "dotenv": "^8.1.0",
    "fuzzysearch": "^1.0.3",
    "js-yaml": "^3.13.1",
    "mongoose": "^5.7.5",
    "nodemon": "^1.19.2",
    "telegraf": "^3.32.0",
    "telegraf-i18n": "^6.6.0",
    "typegoose": "^5.9.1",
    "typescript": "^3.6.3",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "axios": "^0.21.2",
    "flat": "^5.0.0"
  }
}
